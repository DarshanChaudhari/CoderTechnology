  <web-resource-collection>
  	<url-pattern>/*</url-pattern>
  	<http-method>GET</http-method>
  </web-resource-collection>
  	<auth-constraint>
  		<role-name>tomcat</role-name>
  		<description>Allowed access to secured page to all tomcat users</description>
  	</auth-constraint>
  </security-constraint>
